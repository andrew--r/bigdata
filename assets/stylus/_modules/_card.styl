.card
  position relative
  width 230px
  
  padding 5px 30px
  
  text-align center
  border 1px solid #dadada
  
  &:before
    content ""
    position absolute
    z-index -1
    top 5px
    left 5px
    right 5px
    bottom 5px
    
    border 1px solid #dadada

.card__thumb
  display block
  margin-top 18px
  margin 18px auto 26px auto

.card__name
  margin-bottom 14px
  
  font-size 12px
  line-height 12px
  color #333
  
  text-transform uppercase
  letter-spacing .1em
  
.card__description
  color #999
  font-size 15px
  line-height 17px
  margin-bottom 24px