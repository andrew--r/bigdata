.sponsor
  max-width 830px
  margin 80px auto 0
  padding 50px 0
  background #f8f3ee
  text-align center

.sponsor__text, .sponsor__logo
  display inline-block
  width 220px
  vertical-align middle
  text-align right
  font-size 14px

.sponsor__text
  margin-right 20px



// RESPONSIVE STUFF
@media screen and (max-width 1030px)
  .sponsor
    margin-top 100px
    width 81.25%
  
  .sponsor__text, .sponsor__logo
    display block
    width 100%
    text-align center
    margin 0
  
  .sponsor__text
    margin-bottom 16px