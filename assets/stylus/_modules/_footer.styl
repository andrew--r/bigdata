.footer
  clearfix()
  
  & > *
    display inline-block
    vertical-align top

.footer__logo
  width 70px
  margin-left 30px
  margin-right 100px


.footer__menu
  clearlist()
  margin-right 20px
  width 130px
  text-align left
  
  li + li
    margin-top 10px
  
  li
    display block
    line-height 12px
  
  a
    font-size 12px
    line-height 12px
    font-family headings-ff
    font-weight bold
    
    text-decoration none
    text-transform uppercase
    letter-spacing .1em
    
    color #585858
    
    &:hover
      color #e06d50

.footer__copyright
  font-size 14px
  text-align left
  width 500px
  
  a
    color inherit
    text-decoration none
    
    &:hover
      color #e06d50

.footer__counters
  width 160px
  text-align right



// RESPONSIVE STUFF
@media screen and (max-width 1030px)
  .footer__logo
    display block
    margin 0 auto 16px
    img
      display block
  
  .footer__menu
    display block
    width 100%
    margin-bottom 16px
    text-align center
    
    li
      display inline-block
      margin-left 12px
      margin-top 0 !important
      &:first-child
        margin-left 0
    
    a
      text-transform lowercase
      font-family bff
  
  .footer__copyright
    display block
    margin 0 auto 16px
    width 320px
    text-align center
    
    
  
  .footer__counters
    width 100%
    text-align center
    
    & > *
      display inline-block