.header
  position relative
  height 500px
  
  margin-bottom 50px
  
  background url("../images/bg-header.png") repeat-x
  background-position 50% 20%
  background-size cover
  
  color #fff

.header__title, .header__subtitle
  position absolute
  width 100%
  text-align center

.header__title
  bottom 96px
  
  font-size 60px
  text-shadow 0 2px 2px rgba(0, 0, 0, .54);

.header__subtitle
  bottom 50px
  
  text-transform uppercase
  font-family headings-ff
  font-size 12px
  font-weight bold
  
  letter-spacing .15em

.header__copyright
  font-family "Times New Roman", serif
  font-size 14px
  
  position absolute
  bottom 20px
  right 20px



// RESPONSIVE STUFF
@media screen and (max-width 640px)
  .header
    margin-bottom 38px
    height 350px
  
  .header__title
    bottom 70px
    font-size 48px
  
  .header__subtitle
    bottom 30px
  
  .header__copyright
    display none

@media screen and (max-width 400px)
  .header__title
    font-size 36px
    bottom 80px
  
  .header__subtitle
    font-size 10px